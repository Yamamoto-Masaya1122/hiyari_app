<%= form_with model: @post, class: 'max-w-lg px-10 pb-12 xl:mt-16 m-auto bg-white', local: true do |f|%>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mb-3 flex-1">
    <div class="pt-2 pb-2 text-sm">
      <%= f.label :title %>
    </div>
    <%= f.text_field :title, class: 'input input-bordered w-full' %>
  </div>
  <div class="mb-3 flex-1">
    <div class="pt-2 pb-2 text-sm">
      <%= f.label :body %>
    </div>
    <%= f.text_area :body, class: 'textarea input-bordered w-full', rows: 10 %>
  </div>
  <div class="flex items-center justify-between mt-8">
    <%= f.submit "投稿する", type: 'submit', class: 'cursor-pointer py-2 px-4  bg-accent hover:bg-indigo-700 focus:ring-indigo-500 focus:ring-offset-indigo-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  rounded-lg' %>
  </div>
<% end %>